<% provide(:title, 'Sign up') %>
<h1>注册账号</h1>

<div class="row">
  <div class="span6 offset4">
    <%= form_for(@user) do |f| %>
	  <%= render 'shared/error_messages' %>
      <%= f.label :name, "用户名" %>
      <%= f.text_field :name %>

      <%= f.label :email, "邮箱" %>
      <%= f.text_field :email %>

      <%= f.label :password, "密码" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "确认密码" %>
      <%= f.password_field :password_confirmation %>
	  <br>
      <%= f.submit "创建账号", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>